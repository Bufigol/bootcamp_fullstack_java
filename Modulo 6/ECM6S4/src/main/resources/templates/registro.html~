<body>
<div id="cyberpunk-form" class="container">
    <div class="card">
        <div class="card-header">
            <h3 class="text-center m-0">Registrar Usuario</h3>
        </div>
        <div class="card-body">
            <!-- Mensaje de error general -->
            <div th:if="${mensaje}" class="alert alert-danger text-center" role="alert"
                 th:text="${mensaje}">
            </div>

            <form th:action="@{/registro}" th:object="${usuario}" method="post">
                <!-- Nombre -->
                <div class="form-group">
                    <input type="text"
                           class="form-control"
                           th:field="*{nombre}"
                           th:class="${#fields.hasErrors('nombre')} ? 'form-control is-invalid' : 'form-control'"
                           placeholder="Nombre">
                    <div th:if="${#fields.hasErrors('nombre')}" class="error-message"
                         th:errors="*{nombre}">
                    </div>
                </div>

                <!-- Apellido -->
                <div class="form-group">
                    <input type="text"
                           class="form-control"
                           th:field="*{apellido}"
                           th:class="${#fields.hasErrors('apellido')} ? 'form-control is-invalid' : 'form-control'"
                           placeholder="Apellido">
                    <div th:if="${#fields.hasErrors('apellido')}" class="error-message"
                         th:errors="*{apellido}">
                    </div>
                </div>

                <!-- Username -->
                <div class="form-group">
                    <input type="text"
                           class="form-control"
                           th:field="*{username}"
                           th:class="${#fields.hasErrors('username')} ? 'form-control is-invalid' : 'form-control'"
                           placeholder="Usuario">
                    <div th:if="${#fields.hasErrors('username')}" class="error-message"
                         th:errors="*{username}">
                    </div>
                </div>

                <!-- Password -->
                <div class="form-group">
                    <input type="password"
                           class="form-control"
                           th:field="*{password}"
                           th:class="${#fields.hasErrors('password')} ? 'form-control is-invalid' : 'form-control'"
                           placeholder="Contraseña">
                    <div th:if="${#fields.hasErrors('password')}" class="error-message"
                         th:errors="*{password}">
                    </div>
                    <small class="text-muted">Mínimo 10 caracteres, debe incluir mayúscula, número y símbolo</small>
                </div>

                <!-- Email -->
                <div class="form-group">
                    <input type="email"
                           class="form-control"
                           th:field="*{email}"
                           th:class="${#fields.hasErrors('email')} ? 'form-control is-invalid' : 'form-control'"
                           placeholder="Correo electrónico">
                    <div th:if="${#fields.hasErrors('email')}" class="error-message"
                         th:errors="*{email}">
                    </div>
                </div>

                <!-- Botón Submit -->
                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary">Registrar</button>
                </div>
            </form>
        </div>
    </div>
</div>


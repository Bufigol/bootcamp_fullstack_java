<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="https://jakarta.ee/xml/ns/jakartaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd"
         version="6.0">

    <servlet>
        <servlet-name>ProcesarLogin</servlet-name>
        <servlet-class>com.bufigol.servlets.ProcesarLogin</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProcesarLogin</servlet-name>
        <url-pattern>/procesar-login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ProcesarRegistro</servlet-name>
        <servlet-class>com.bufigol.servlets.ProcesarRegistro</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProcesarRegistro</servlet-name>
        <url-pattern>/procesar-registro</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ProcesarLogout</servlet-name>
        <servlet-class>com.bufigol.servlets.ProcesarLogout</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProcesarLogout</servlet-name>
        <url-pattern>/procesar-logout</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>InformacionDelUsuario</servlet-name>
        <servlet-class>com.bufigol.servlets.ObtenerInfoZodiaco</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>InformacionDelUsuario</servlet-name>
        <url-pattern>/Informacion_del_Usuario</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ProcesarEliminarCuenta</servlet-name>
        <servlet-class>com.bufigol.servlets.ProcesarEliminarCuenta</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProcesarEliminarCuenta</servlet-name>
        <url-pattern>/procesar-eliminar-cuenta</url-pattern>
    </servlet-mapping>
</web-app>